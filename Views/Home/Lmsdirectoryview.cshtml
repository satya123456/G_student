    <script>

        function getfiles(type,name){
            $.ajax({

                type: 'POST',
                url: './getfiles',
                data: {type:type,name:name},
                success: (function (data) {

                    var PdfName = data;
                    if (PdfName != "") {
                        var pdfWindow = window.open("");
                     
                        if (pdfWindow) {
                            setTimeout(function () {
                                pdfWindow.document.write(
                                    "<iframe width='100%' height='100%' src='data:application/pdf;base64, " + PdfName + "'></iframe>"
                                );
                                pdfWindow.document.title = "GITAM | Student portal";
                            }, 500); // Delay in milliseconds (adjust as needed)
                        } else {
                            alert("Failed to open PDF window.");
                        }
                    } else {
                        alert("PDF file not available!");
                    }

                })
            });



        }

        function Lmsback() {
            debugger;
            var checked='@ViewBag.radiovalue';
           
            $('#maindiv').html("");
            $.ajax({

                type: 'GET',
                url: './getlmssubjects',

                success: (function (result) {
                    $('#maindiv', $(checked).attr('checked', 'checked'));
                    $('#maindiv').html(result);
                    
                  
                    $(checked).attr('checked', 'checked');
                })
            });

        }
    </script>
