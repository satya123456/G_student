<script>
    function Lmsback() {


        $('#maindiv').html("");
        $.ajax({

            type: 'GET',
            url: './Home/getlmssubjects',

            success: (function (result) {

                $('#maindiv').html(result);


            })
        });

    }

    function myinfoModal() {
        $('#myinfoModal1').modal('show');
    }
</script>